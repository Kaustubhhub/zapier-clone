generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @unique @default(autoincrement())
  username String
  password String
  name     String
}

model Zap {
  id String @id @default(uuid())
}

model Trigger {
  id    String @id @default(uuid())
  zapId String
}

model AvailableTriggers {
  id   String @id @default(uuid())
  name String
}
